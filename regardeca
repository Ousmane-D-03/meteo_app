 Future<void> _loadCityInfo(String cityName) async {
    setState(() {
      _isLoading = true;
      _errorMessage = null;
    });

    try {
      print('üîç Chargement des infos pour : $cityName');
      
      // √âTAPE 1 : R√©cup√©rer les donn√©es de base depuis Wikidata
      final wikidataData = await WikidataService.fetchCityInfo(cityName);

      if (wikidataData == null) {
        setState(() {
          _errorMessage = 'Impossible de trouver "$cityName" sur Wikidata';
          _isLoading = false;
        });
        return;
      }

      // √âTAPE 2 : R√©cup√©rer l'historique et les monuments depuis Wikipedia
      print('Chargement des infos Wikipedia...');
      final wikipediaData = await WikipediaService.fetchCityCompleteInfo(cityName);

      // Fusionner les donn√©es
      final combinedData = {
        ...wikidataData,
        if (wikipediaData != null) ...{
          'history': wikipediaData['history'],
          'monuments': wikipediaData['monuments'],
        }
      };

      setState(() {
        _currentCity = CityInfo.fromJson(combinedData);
        _isLoading = false;
      });
      
      print('Chargement termin√© : ${_currentCity!.monuments.length} monuments');

    } catch (e) {
      setState(() {
        _errorMessage = 'Erreur lors du chargement : $e';
        _isLoading = false;
      });
      print('Erreur : $e');
    }
  }

